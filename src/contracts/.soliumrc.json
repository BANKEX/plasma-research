{
  "extends": "solium:all",
  "plugins": ["security"],
  "rules": {
    "error-reason": "off",
    "indentation": ["error", 2],
    "lbrace": "off",
    "linebreak-style": ["error", "unix"],
    "max-len": ["error", 200],
    "arg-overflow": "off",
    "no-constant": ["error"],
    "no-empty-blocks": "off",
    "quotes": ["error", "double"],
    "uppercase": "off",
    "visibility-first": "error",
    "function-order" : "off",

    "security/enforce-explicit-visibility": ["error"],
    "security/no-block-members": ["warning"],
    "security/no-inline-assembly": ["warning"]
  }
}